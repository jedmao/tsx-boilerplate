{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"newLine": "LF",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"outDir": "build",
		"pretty": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5"
	},
	"exclude": [
		"node_modules"
	],
	"files": [
		"server.ts",
		"webpack.config.ts"
	]
}
